<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_radio_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_add_vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:checked="true"
                    android:layoutDirection="rtl"
                    android:text="@string/radio_button_sum_with_vat"
                    android:textAlignment="textStart" />

                <RadioButton
                    android:id="@+id/rb_subtract_vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:layoutDirection="rtl"
                    android:text="@string/radio_button_sum_before_vat"
                    android:textAlignment="textStart" />
            </RadioGroup>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_calculator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.GridLayout
                android:id="@+id/gv_calculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                app:columnCount="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:rowCount="4">

                <Button
                    android:id="@+id/calc_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_1"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/calc_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_2"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/calc_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_3"
                    app:layout_column="2"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/calc_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_4"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/calc_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_5"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/calc_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_6"
                    app:layout_column="2"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/calc_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_7"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/calc_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_8"
                    app:layout_column="1"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/calc_nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_9"
                    app:layout_column="2"
                    app:layout_row="2" />

                <FrameLayout
                    android:id="@+id/calc_delete"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="calculatorClick"
                    app:layout_column="0"
                    app:layout_row="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_backspace_black_24dp" />

                </FrameLayout>

                <Button
                    android:id="@+id/calc_zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="calculatorClick"
                    android:text="@string/button_0"
                    app:layout_column="1"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_column="2"
                    app:layout_row="3" />


            </android.support.v7.widget.GridLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/cv_radio_buttons">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/text_sum_before_calculation"
                    android:textColor="@android:color/black" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="4dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tv_before_calc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="--"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/text_vat"
                    android:textColor="@android:color/black" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="4dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tv_vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="--"
                    android:textSize="@dimen/information_numbers_text_size" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/text_sum_after_calculation"
                    android:textColor="@android:color/black" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="4dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tv_after_calc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="--"
                    android:textSize="30sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>